@model Caretaskr.Common.ViewModel.BillableItemNotificationViewModel
<style>

    th {
        background-color: #000;
        color: white;
    }
</style>



<table width="100%" cellpadding="2" style="font-size:10px;">
    <tbody>
        <tr>
            <td style="width:200px;">
            </td>
            <td style="width:10px"></td>
            <td style="padding-left:10px; font-size: 20px; text-align:center;" width="300">
                <b>
                    @Model.CompanyName<br />
                    @Model.Address,  @Model.PhoneNumber<br />

                    <br />

</td>
            <td style="width:220px;">
            </td>
        </tr>
        <tr><td colspan="3">&nbsp;</td></tr>
    </tbody>
</table>


<table id="billable" width="80%" cellspacing="0" style="border-collapse: collapse; margin: 0 auto;text-align: left;border: 1px solid;">
    <thead class="no-wrap">
        <tr>

            <th style="padding:5px; background:#000;color:#fff">Service Date</th>
            <th style="padding:5px; background:#000;color:#fff">Name</th>
            <th style="padding:5px; background:#000;color:#fff">Quantity</th>
            <th style="padding:5px; background:#000;color:#fff">Cost</th>
            <th style="padding:5px; background:#000;color:#fff">SubTotal</th>
        </tr>
    </thead>
    <tbody class="no-wrap">
        @foreach (var item in Model.BillableItem)
        {
            <tr>
                <td style="padding:5px; border:1px solid;">@item.ServiceDate</td>
                <td style="padding:5px; border:1px solid;">@item.Name</td>
                <td style="padding:5px; border:1px solid;">@item.Quantity</td>
                <td style="padding:5px; border:1px solid;">$@item.Price</td>
                <td style="padding:5px; border:1px solid;">$@item.TotalCost</td>
            </tr>

        }
        <tr>
            <td></td>
            <td></td>
            <td style="padding:5px; border:1px solid;"><b>Total </b></td>
            <td style="padding:5px; border:1px solid;"></td>
            <td style="padding:5px; border:1px solid;"></td>


        </tr>

    </tbody>
</table>

<p>
    <br />
    <div style="font-size: 16px;color: #000;width: 80%;margin: 0 auto;">
        <h4>Payment Terms: </h4>
        <div>14 days from date of invoice issue</div>
        <div>Late or no payment will result in services being ceased</div>
        <div>Payment can be mady by bank transfer or credit card.</div>

    </div>
</p>
