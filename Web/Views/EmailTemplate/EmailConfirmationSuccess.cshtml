@model Caretaskr.Common.ViewModel.EmailConfirmationNotificationViewModel
Hi ,<h2 style="margin-top: 0;color: black;font-family: Georgia,serif;font-size: 16px;line-height: 25px;Margin-bottom: 25px">
</h2>
<h2 style="margin-top: 0; color: black; font-family: Georgia, serif; font-size: 16px; line-height: 25px; Margin-bottom: 24px">
</h2>
<p style="margin-top: 0;color: black;font-family: Georgia,serif;font-size: 15px;line-height: 25px;Margin-bottom: 25px">
    Your Email address has been confirmed.
</p>

@if (!string.IsNullOrEmpty(Model.ResetPasswordUrl))
{
    <p style="margin-top: 0;color: black;font-family: Georgia,serif;font-size: 15px;line-height: 25px;Margin-bottom: 25px">
        Please click here.
    </p>
    <p style="margin-top: 0;color: black;font-family: Georgia,serif;font-size: 15px;line-height: 25px;Margin-bottom: 25px">
        <a style="background-color:#e44868; padding:10px 15px; color:#fff; text-decoration:none;border-radius:4px; margin-bottom:10px;"
           href="@Model.ResetPasswordUrl"> Reset Your Password.</a>
    </p>

}

else
{
    <p style="margin-top: 0;color: black;font-family: Georgia,serif;font-size: 15px;line-height: 25px;Margin-bottom: 25px">
        Please click here to <a href="@Model.CallBackUrl"><strong> login </strong></a>
    </p>

}

<p style="margin-top: 0;color: black;font-family: Georgia,serif;font-size: 15px;line-height: 25px;Margin-bottom: 25px">
    Thank You

</p>
